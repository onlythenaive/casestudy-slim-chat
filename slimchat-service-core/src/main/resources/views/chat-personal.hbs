<h1>Chat with {{data.chat.recipient.accountName}}</h1>

<hr/>

<div style="width: 400px;">
    {{#data.chat}}

        <div>
            {{#history.messages}}
                <div>
                    message with ID = {{id}}: {{text}}
                </div>
            {{/history.messages}}
        </div>

        <div>
            <form action="/view/chat/message" method="post">
                <input name="recipientId" type="hidden" value="{{recipient.id}}">
                <textarea name="text" placeholder="Enter the message"></textarea>
                <button type="submit">Send</button>
            </form>
        </div>
        <hr/>
    {{/data.chat}}
</div>

<hr/>

<ul>
    <li><a href="/view/home">Back Home</a></li>
</ul>
