<h1>My contacts</h1>

<hr/>

<div style="width: 400px;">
    {{#data.contacts}}

        <div>
            {{accountName}}
        </div>

        <div>
            <form action="/view/chat/{{accountName}}" method="get">
                <button type="submit">Write message</button>
            </form>
        </div>
        <div>
            <form action="/view/contacts/delete" method="post">
                <input name="accountId" type="hidden" value="{{id}}">
                <button type="submit">Remove from contacts</button>
            </form>
        </div>

        <hr/>
    {{/data.contacts}}
</div>

<hr/>

<ul>
    <li><a href="/view/home">Back Home</a></li>
</ul>
