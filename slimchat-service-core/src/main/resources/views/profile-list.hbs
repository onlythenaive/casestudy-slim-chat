<h1>User profiles</h1>

<hr/>

<div style="width: 400px;">
    {{#data.profiles}}

        <div>
            {{accountName}}
        </div>

        <div>
            {{firstname}} {{lastname}}
        </div>

        {{#if connected}}
            <div>
                Connected
            </div>
        {{/if}}

        {{#if ownedByPrincipal}}
            <div>
                Me!
            </div>
        {{/if}}

        <div>
            <form action="/view/profile/{{accountName}}" method="get">
                <button type="submit">View the profile</button>
            </form>
        </div>

        <hr/>
    {{/data.profiles}}
</div>

<hr/>

<ul>
    <li><a href="/view/home">Back Home</a></li>
</ul>
