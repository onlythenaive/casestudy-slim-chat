{{#partial "content"}}

    <div class="chat">

        {{#data.chat}}

            {{#if group}}
                <h1>Group chat {{group.caption}}</h1>
            {{else}}
                <h1>Chat with {{companion.prettyName}}</h1>
            {{/if}}

            <form class="message-form" action="messages/create" method="post">

                <input name="chatId" type="hidden" value="{{chatId}}">

                <div class="form-control">
                    <textarea name="text" placeholder="Enter the message"></textarea>
                </div>

                <button type="submit">Send</button>
            </form>

            {{#if messages}}

                <form class="history-form" action="chats/clear" method="post">

                    <input name="id" type="hidden" value="{{chatId}}">

                    <button type="submit">Clear history</button>
                </form>
            {{/if}}


            <div class="history">

                {{#messages}}
                    <div class="message">
                        <div class="avatar-section">
                            <img class="avatar" src="{{gravatarUrl}}">
                        </div>
                        <div class="content-section">
                            <div>
                                <span class="author">
                                    {{#if own}}
                                        Me
                                    {{else}}
                                        <a href="profiles/{{author.id}}">{{author.prettyName}}</a>
                                    {{/if}}
                                </span>
                                <span class="timestamp">{{prettyCreatedAt}}</span>
                            </div>
                            <div class="text">
                                <span class="text">{{text}}</span>
                            </div>
                        </div>
                    </div>
                {{/messages}}
            </div>
        {{/data.chat}}
    </div>
{{/partial}}

{{> plain/templates/layout}}
