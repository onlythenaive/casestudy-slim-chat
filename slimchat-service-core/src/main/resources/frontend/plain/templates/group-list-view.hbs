{{#partial "content"}}

    <h1>My groups</h1>

    <hr/>

    <div style="width: 400px;">
        {{#data.groups}}

            <div>
                {{caption}}
            </div>

            <div>
                <form action="chats/group/{{id}}" method="get">
                    <button type="submit">Write message</button>
                </form>
            </div>
            <div>
                <form action="groups/leave" method="post">
                    <input name="groupId" type="hidden" value="{{id}}">
                    <button type="submit">Leave the group</button>
                </form>
            </div>

            <hr/>
        {{/data.groups}}
    </div>

    <hr/>

    <form action="groups/new" method="get">
        <button type="submit">Create a new group</button>
    </form>

{{/partial}}

{{> plain/templates/layout}}
