{{! NOTE: the docoment type - this stands for HTML v5 }}
<!DOCTYPE html>

<html>

    {{! NOTE: document's header - meta info & resource inclusions live here }}
    <head>

        {{! NOTE: set a caption to application's web page in the browser }}
        <title>Slim Chat: Plain Old UI</title>

        {{! NOTE: set the base URI for all requests from this page }}
        <base href="{{@root.context.base}}">

        {{! NOTE: set correct content encoding... this it really important }}
        <meta charset="UTF-8">

        {{! NOTE: set viewport settings to make the page responsive }}
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">

        {{! NOTE: include common frontend stylesheets }}
        <link rel="stylesheet" href="styles/common.css">
        <link rel="stylesheet" href="styles/security.css">
        <link rel="stylesheet" href="styles/navbar.css">
        <link rel="stylesheet" href="styles/profile.css">
        <link rel="stylesheet" href="styles/chat.css">

        {{! NOTE: include website icon }}
        <link rel="icon" href="images/favicon.png">
    </head>

    {{! NOTE: document's main part - all the content must be placed here }}
    <body>

        <div class="navbar">

            <span class="navbar-item brand">Slim Chat</span>

            {{#if context.user}}

                <a href="chats" class="navbar-item"><i class="fa fa-fw fa-envelope"></i>Chats</a>
                <a href="contacts" class="navbar-item"><i class="fa fa-fw fa-users"></i>Contacts</a>
                <a href="profiles" class="navbar-item"><i class="fa fa-fw fa-search"></i>People</a>

                <span class="navbar-spacer"></span>

                <a href="profiles/me" class="navbar-item"><i class="fa fa-fw fa-user"></i>{{profileName context.user}}
                </a>

                <form class="navbar-item form-logout" action="logout" method="post">
                    <button type="submit"><i class="fa fa-fw fa-envelope"></i>Logout</button>
                </form>
            {{/if}}
        </div>

        <div>
            {{#block "content"}}{{/block}}
        </div>
    </body>
</html>
