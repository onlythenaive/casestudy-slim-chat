{{#partial "content"}}

        <h1>User profiles</h1>

        <table class="profile-table">

            <thead>
                <tr>
                    <td>Avatar</td>
                    <td>Name</td>
                    <td>Status</td>
                    <td>Connected to me?</td>
                </tr>
            </thead>
            <tbody>
                {{#data.profiles}}
                    <tr>
                        <td>
                            <img src="https://www.gravatar.com/avatar/{{emailHash}}?s=48&default=identicon">
                        </td>
                        <td>
                            <a href="profiles/{{id}}">{{firstname}} {{lastname}}</a>
                        </td>
                        <td>
                            {{status}}
                        </td>
                        <td>
                            {{#if connected}}
                                Yes
                            {{else}}
                                No yet
                            {{/if}}
                        </td>
                    </tr>
                {{/data.profiles}}
            </tbody>
        </table>
{{/partial}}

{{> plain/templates/layout}}
