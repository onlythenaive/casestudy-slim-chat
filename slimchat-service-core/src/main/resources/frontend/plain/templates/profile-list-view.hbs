{{#partial "content"}}

    <h1>People</h1>

    <ul>
        {{#data.profiles}}
            <li>
                <a href="profiles/{{id}}">
                    <img class="gravatar" src="{{gravatarUrl}}">
                    <span>{{prettyName}}</span>
                    {{#if connected}}
                        <span class="tag tag-green">connected</span>
                    {{/if}}
                    {{#if online}}
                        <span class="tag tag-blue">online</span>
                    {{/if}}
                </a>
            </li>
        {{/data.profiles}}
    </ul>
{{/partial}}

{{> plain/templates/layout}}
