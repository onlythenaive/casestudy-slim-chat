{{#partial "content"}}

    <h1>My chats</h1>

    <ul class="chat-list">
        {{#data.chats}}
            <li class="chat-list-item">
                {{#if companion}}
                    <img src="{{companion.gravatarUrl}}">
                    <span>{{companion.prettyName}}</span>
                    <a href="chats/{{companion.id}}">Send message</a>
                {{else}}
                    <img src="{{group.gravatarUrl}}">
                    <span>{{group.caption}}</span>
                    <a href="chats/{{group.id}}">Send message</a>
                {{/if}}
                {{#messages}}
                    <span>{{text}}</span>
                    <img src="{{author.smallGravatarUrl}}">
                    <span>{{author.prettyName}}</span>
                {{/messages}}
            </li>
        {{/data.chats}}
    </ul>
{{/partial}}

{{> plain/templates/layout}}
